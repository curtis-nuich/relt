---
import BaseLayout from "../layouts/BaseLayout.astro";
import Section from "../components/Section.astro";
import Card from "../components/Card.astro";
import StatsGrid from "../components/StatsGrid.astro";
---

<BaseLayout
  title="RELT - Refugee English Language Tutoring Australia | Free English Classes for Refugees"
  description="Free weekly one-on-one English tutoring for refugees and asylum seekers across Australia. Join our community of 200+ participants from 25+ countries."
>
  <Section class="hero-section">
    <div class="hero-container fade-in-up">
      <h1 class="hero-title">
        Empowering Refugees Through
        <span class="highlight">English Language Learning</span>
      </h1>
      <p class="hero-description">
        <span class="org-name">Refugee English Language Tutoring (RELT)</span> is
        a charity that offers weekly, one-on-one English tutoring to refugees and
        asylum seekers across Australia. RELT was founded in 2025 and has already
        grown to support over 200 weekly participants from more than 25 countries.
      </p>
    </div>
  </Section>

  <Section class="image-section">
    <div class="image-container fade-in-up">
      <img
        src="v2/chatting.svg"
        alt="Community illustration"
        class="center-image"
      />
    </div>
  </Section>

  <Section class="stats-section">
    <div class="stats-wrapper fade-in-up">
      <h2 class="section-title">Our Community</h2>
      <StatsGrid
        stats={[
          { number: "25+", label: "Countries Represented" },
          { number: "30+", label: "Native Languages" },
          { number: "21-65+", label: "Age Range" },
        ]}
      />
    </div>
  </Section>

  <Section class="involvement-section">
    <h2 class="section-title fade-in-up">Get Involved</h2>
    <div class="cards-grid">
      <Card class="action-card fade-in-up">
        <div class="card-content-wrapper">
          <div class="card-text">
            <h3>Become a Tutor</h3>
            <p>
              Share your knowledge and make a meaningful difference in someone's
              life. Join our community of volunteer tutors.
            </p>
          </div>
          <a
            href="https://forms.office.com/Pages/ResponsePage.aspx?id=5huHn-nQ3UukAgmDZWJ4zz6wKn81NeBDtOjy-wbbqMVUMVU1SVdPRk8yQkZDUFlFNVFPNkZKVDZNRC4u"
            class="btn btn-card"
            aria-label="Apply to become a tutor"
          >
            Apply to Tutor
          </a>
        </div>
      </Card>

      <Card class="action-card fade-in-up">
        <div class="card-content-wrapper">
          <div class="card-text">
            <h3>Join as a Tutee</h3>
            <p>
              Improve your English skills with personalized, one-on-one tutoring
              sessions tailored to your needs and goals.
            </p>
          </div>
          <a
            href="https://forms.office.com/Pages/ResponsePage.aspx?id=5huHn-nQ3UukAgmDZWJ4zz6wKn81NeBDtOjy-wbbqMVUOUZMTTBEVzE4OFY0QUI1TDlJMDZOSVQwUy4u"
            class="btn btn-card"
            aria-label="Apply for tutoring"
          >
            Apply for Tutoring
          </a>
        </div>
      </Card>

      <Card class="action-card video-card fade-in-up">
        <div class="card-content-wrapper">
          <div class="card-text">
            <h3>Learn More</h3>
            <div class="youtube-embed">
              <iframe
                src="https://www.youtube.com/embed/w1XvylJuTGw?list=PLzGJUMA3VO8EEz7ijNt0S6skaQdVXM2nh"
                title="RELT YouTube Playlist"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              >
              </iframe>
            </div>
            <p>
              Watch our videos to learn more about RELT's mission and see our
              tutoring in action.
            </p>
          </div>
          <a
            href="https://youtube.com/playlist?list=PLzGJUMA3VO8EEz7ijNt0S6skaQdVXM2nh&si=2EE_OD9E0lGZfLkp"
            class="btn btn-card"
            aria-label="Watch RELT videos on YouTube"
            target="_blank"
            rel="noopener noreferrer"
          >
            Watch Videos
          </a>
        </div>
      </Card>
    </div>
    <Section class="contact-section">
      <div class="contact-card fade-in-up">
        <h2>Get in Touch</h2>
        <p>Have questions or want to learn more about RELT?</p>
        <a href="mailto:admin@reltutoring.org" class="email-link">
          admin@reltutoring.org
        </a>
      </div>
    </Section>

    <style>
      :global(.hero-section) {
        position: relative;
        background-image:
          linear-gradient(rgba(241, 110, 39, 0.06) 2px, transparent 2px),
          linear-gradient(90deg, rgba(241, 110, 39, 0.06) 2px, transparent 2px);
        background-size: 40px 40px;
        background-color: var(--color-primary-light);
        padding: var(--space-3xl) 0 var(--space-2xl);
      }

      :global(.hero-section::after) {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 150px;
        background: linear-gradient(
          to bottom,
          transparent,
          var(--color-bg-primary)
        );
        pointer-events: none;
        z-index: 0;
      }

      .hero-container {
        position: relative;
        z-index: 1;
        max-width: 900px;
        margin: 0 auto;
        text-align: center;
      }

      .hero-container {
        max-width: 900px;
        margin: 0 auto;
        text-align: center;
      }

      .hero-title {
        font-size: clamp(2.5rem, 6vw, 4rem);
        font-weight: 800;
        letter-spacing: -0.02em;
        line-height: 1.1;
        margin-bottom: var(--space-xl);
        color: var(--color-text-dark);
      }

      .highlight {
        color: var(--color-primary);
        display: inline-block;
      }

      .hero-description {
        font-size: var(--text-lg);
        line-height: 1.7;
        color: var(--color-text-medium);
        max-width: 800px;
        margin: 0 auto;
      }

      .org-name {
        color: var(--color-primary);
        font-weight: var(--font-semibold);
      }

      .image-section {
        padding: var(--space-2xl) 0;
        background: var(--color-bg-white);
      }

      /* Stats Section */
      .stats-section {
        background: var(--color-bg-white);
        padding: var(--space-2xl) 0;
      }

      .stats-wrapper {
        max-width: 1000px;
        margin: 0 auto;
      }

      .section-title {
        font-size: var(--text-3xl);
        text-align: center;
        margin-bottom: var(--space-xl);
        color: var(--color-text-dark);
        position: relative;
        display: inline-block;
        width: 100%;
      }

      .section-title::after {
        content: "";
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 3px;
        background: var(--color-primary);
        border-radius: 2px;
      }

      /* Cards Section */
      .involvement-section {
        padding: var(--space-2xl) 0 var(--space-3xl);
      }

      .cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: var(--space-2xl);
        max-width: 1200px;
        margin: 0 auto;
      }

      .action-card :global(.card) {
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition:
          transform var(--transition-base),
          box-shadow var(--transition-base);
      }

      .action-card :global(.card:hover) {
        transform: translateY(-8px) scale(1.01);
        box-shadow:
          0 12px 24px rgba(0, 0, 0, 0.1),
          0 0 0 1px rgba(241, 110, 39, 0.1);
      }

      .card-content-wrapper {
        display: flex;
        flex-direction: column;
        height: 100%;
        gap: var(--space-lg);
      }

      .card-text {
        flex: 1;
        display: flex;
        flex-direction: column;
      }

      .action-card h3 {
        color: var(--color-primary);
        margin-bottom: var(--space-md);
        font-size: var(--text-xl);
      }

      .action-card p {
        margin-bottom: 0;
        flex: 1;
      }

      .btn-card {
        margin-top: auto;
        width: 100%;
        padding: var(--space-md) var(--space-2xl);
        background: linear-gradient(
          135deg,
          var(--color-primary) 0%,
          var(--color-primary-dark) 100%
        );
        box-shadow: 0 4px 14px rgba(241, 110, 39, 0.25);
        font-size: 1.0625rem;
        letter-spacing: 0.01em;
      }

      .btn-card:hover,
      .btn-card:focus {
        box-shadow: 0 6px 20px rgba(241, 110, 39, 0.35);
      }

      .youtube-embed {
        width: 100%;
        margin: var(--space-md) 0;
        border-radius: var(--radius-sm);
        overflow: hidden;
        position: relative;
        padding-bottom: 56.25%;
        background: #f0f0f0;
        box-shadow: var(--shadow-sm);
      }

      .youtube-embed iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: none;
      }

      /* Contact Section */
      .contact-section {
        padding: var(--space-3xl) 0;
      }

      .contact-card {
        max-width: 900px;
        margin: 0 auto;
        background: var(--color-primary);
        padding: var(--space-3xl) var(--space-2xl);
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-lg);
        text-align: center;
      }

      .contact-card h2 {
        color: white;
        margin-bottom: var(--space-md);
        font-size: var(--text-3xl);
      }

      .contact-card p {
        color: white;
        font-size: var(--text-lg);
        margin-bottom: var(--space-xl);
      }

      .email-link {
        display: inline-block;
        font-size: var(--text-xl);
        font-weight: var(--font-semibold);
        color: var(--color-primary);
        background: white;
        padding: var(--space-md) var(--space-2xl);
        border-radius: var(--radius-full);
        transition: all var(--transition-base);
        position: relative;
      }

      .email-link::after {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 50%;
        transform: translateX(-50%);
        width: 0;
        height: 2px;
        background: var(--color-primary);
        transition: width 0.3s ease;
      }

      .email-link:hover::after {
        width: calc(100% - var(--space-2xl) * 2);
      }

      .email-link:hover,
      .email-link:focus {
        background: var(--color-primary-light);
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
      }

      /* Animations */
      .fade-in-up {
        opacity: 0;
        transform: translateY(30px);
        animation: fadeInUp 0.6s ease forwards;
      }

      .fade-in-up:nth-child(1) {
        animation-delay: 0.1s;
      }

      .fade-in-up:nth-child(2) {
        animation-delay: 0.2s;
      }

      .fade-in-up:nth-child(3) {
        animation-delay: 0.3s;
      }

      @keyframes fadeInUp {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Responsive */
      @media (max-width: 1024px) {
        .cards-grid {
          grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        }
      }

      @media (max-width: 768px) {
        .hero-section {
          padding: var(--space-2xl) 0 var(--space-xl);
        }

        .hero-title {
          font-size: 2rem;
        }

        .hero-description {
          font-size: var(--text-base);
        }

        .cards-grid {
          grid-template-columns: 1fr;
          gap: var(--space-xl);
          max-width: 500px;
          margin: 0 auto;
        }

        .stats-section {
          padding: var(--space-xl) 0;
        }

        .involvement-section {
          padding: var(--space-xl) 0 var(--space-2xl);
        }

        .contact-section {
          padding: var(--space-2xl) 0;
        }

        .contact-card {
          padding: var(--space-2xl) var(--space-lg);
        }

        .contact-card h2 {
          font-size: var(--text-2xl);
        }

        .contact-card p {
          font-size: var(--text-base);
        }

        .email-link {
          font-size: var(--text-lg);
          padding: var(--space-sm) var(--space-xl);
        }

        .action-card :global(.card:hover) {
          transform: translateY(-4px);
        }
      }

      @media (prefers-reduced-motion: reduce) {
        .fade-in-up {
          animation: none;
          opacity: 1;
          transform: none;
        }

        .email-link:hover,
        .action-card :global(.card:hover) {
          transform: none;
        }

        .email-link::after {
          transition: none;
        }
      }
    </style>

    <script>
      const observerOptions = {
        threshold: 0.1,
        rootMargin: "0px 0px -50px 0px",
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("visible");
          }
        });
      }, observerOptions);

      document.querySelectorAll(".fade-in-up").forEach((el) => {
        observer.observe(el);
      });
    </script>
  </Section>
</BaseLayout>
