---
import BaseLayout from "../layouts/BaseLayout.astro";
import ScrollSection from "../components/ScrollSection.astro";
import ContentSection from "../components/ContentSection.astro";
import { getInvolvedContent } from "../content/get-involved.js";
---

<BaseLayout
  title="Get Involved - RELT"
  description="Join RELT as a tutor or student. Make a difference through English language education for refugees and asylum seekers."
  hasScrollSections={true}
>
  <div class="page-intro">
    <p class="intro-text">{getInvolvedContent.intro}</p>
  </div>

  {
    getInvolvedContent.sections.map((section) => (
      <ScrollSection id={section.id} title={section.title}>
        <div class="section-content">
          {section.tagline && <p class="tagline">{section.tagline}</p>}

          <p class="section-intro">{section.intro}</p>

          {section.description && (
            <p class="section-description">{section.description}</p>
          )}

          {section.requirements && (
            <div class="items-box">
              <h3>{section.requirements.title}</h3>
              <ul>
                {section.requirements.items.map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
            </div>
          )}

          {section.benefits && (
            <div class="items-box">
              <h3>{section.benefits.title}</h3>
              <ul>
                {section.benefits.items.map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
            </div>
          )}

          {section.partnershipOptions && (
            <div class="items-box">
              <ul>
                {section.partnershipOptions.map((option) => (
                  <li>{option}</li>
                ))}
              </ul>
            </div>
          )}

          {section.applicationProcess && (
            <p class="application-note">{section.applicationProcess}</p>
          )}

          {section.closingText && (
            <p class="closing-text">{section.closingText}</p>
          )}

          {section.cta && (
            <div class="cta-center">
              <a href={section.cta.link} class="btn">
                {section.cta.text}
              </a>
            </div>
          )}
        </div>
      </ScrollSection>
    ))
  }
</BaseLayout>

<style>
  .page-intro {
    max-width: 800px;
    margin: 0 auto var(--spacing-xxl);
    text-align: center;
    padding: var(--spacing-xl) var(--spacing-md) 0;
  }

  .intro-text {
    font-size: 1.2rem;
    color: var(--text-gray);
  }

  .section-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .tagline {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--primary-orange);
    text-align: center;
    margin-bottom: var(--spacing-lg);
  }

  .section-intro,
  .section-description,
  .application-note,
  .closing-text {
    font-size: 1.1rem;
    text-align: center;
    margin-bottom: var(--spacing-md);
    color: var(--text-gray);
  }

  .items-box {
    background: var(--bg-white);
    padding: var(--spacing-lg);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-light);
    margin: var(--spacing-lg) 0;
  }

  .items-box h3 {
    color: var(--primary-orange);
    margin-bottom: var(--spacing-md);
  }

  ul {
    list-style-position: inside;
    color: var(--text-gray);
  }

  li {
    padding: var(--spacing-xs) 0;
    line-height: 1.6;
  }

  .cta-center {
    text-align: center;
    margin-top: var(--spacing-xl);
  }
</style>
